@import '../template/top/top.wxss';
.screen{
  position: relative;
  top: 0;
  bottom:0;
  width: 750rpx;
  z-index: 0;
  background-color: rgb(57, 54, 61) 
}

.cemian{
  position: absolute;
  left: -13rpx;
  top: 30rpx;
  width: 250rpx;
  height: 60rpx;
  z-index: 15;
  background-image: linear-gradient(#FFF75E,#F8D411);
  font-size:38rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-weight:bold;

}


.cemian::after{
  content: '';
  position: absolute;
  top: 60rpx;
  left: 0;
  
  border-top: 13rpx solid #E8CA00;
  border-left: 17rpx solid transparent
}



.blank{
  width: 750rpx;
  height: 230rpx;
  
}
.run_club{
  position: relative;
  
  width: 100%;
  
  height: 100%;
  
  z-index: 10;
  
  box-shadow: 0 8rpx 12rpx 0rpx hsla(0, 0%, 0%, 0.2);
  background-color: #cccccc;
  overflow: hidden
}

.iew{
  position: relative;
  margin: 55rpx 0 55rpx 0;
  width: 680rpx;
  margin-left:35rpx;
  height: 375rpx;
  
  z-index: 9;
  transform: skewY(-10deg);
  -webkit-transform: skewY(-10deg);
  
  background-color: #DDDDDD;
  overflow: visible
}





.blank2{
  width: 750rpx;
  height: 130rpx;
  
}




.act_pic{
  position: absolute;
  z-index: 2;
  bottom: -100rpx;
  width: 100%;
  height: 150%;
  transform: skewY(10deg);
  -webkit-transform: skewY(10deg);
}

.dingbu{
  position: absolute;
  top: 0;
  height: 2.5%;
  width: 100%;
  z-index: 3;
  background-image: linear-gradient(90deg,#359BDD,#2F89C4,#16425E)
}

.scroll-lock {
 height: 400px;
 overflow-y: hidden;
}
