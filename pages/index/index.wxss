  height: 54rpx;
}

.strech::before{
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  width: 55rpx;
  height: 100%;
  
  background-image: linear-gradient(#FFFD05,#FFEF00 50%,#FFDA16)
}
