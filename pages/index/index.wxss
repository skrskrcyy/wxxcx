}

/* 中间的按钮 */
.strech{
  position: absolute;
  top: 650rpx;
  width: 550rpx;
  margin-left: 100rpx;
  margin-right: 100rpx;
  background-image: linear-gradient(#FEFF00,#FEB900);
  height: 100rpx;
  transform: skewY(-10deg);
  -webkit-transform: skewY(-10deg);
  z-index: 6;
  border-right: 5rpx;
  box-shadow: 0 8rpx 12rpx 0rpx hsla(0, 0%, 0%, 0.2)
}

.strech_hover{
  box-shadow: 0 0rpx 12rpx 5rpx hsla(0, 0%, 0%, 0.2) 
}

.jiantou{
  position: absolute;
  right: 10rpx;
  top: 23rpx;
