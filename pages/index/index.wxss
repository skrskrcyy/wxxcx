/* 底部 */


.bottom{
  position: absolute;
  z-index: 2;
  bottom: 0rpx;
  height: 58rpx;
  width:0;
  border-right:750rpx solid rgb(255, 84, 0);
  border-top: 132.25rpx solid transparent
}
.bottom::after{
  content: '';
  position: absolute;
  z-index: 1;
  bottom: 0rpx;
  height: 50rpx;
  width:0;
  border-right:750rpx solid rgb(0, 150, 220);
  border-top: 132.25rpx solid transparent;
  
}


.dikanong_pic{
  position: absolute;
  z-index: 5;
  bottom: 20rpx;
